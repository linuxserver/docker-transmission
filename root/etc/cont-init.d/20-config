#!/usr/bin/with-contenv bash

# make folders
mkdir -p \
	/downloads/{complete,incomplete} /watch

# copy config
[[ ! -f /config/settings.json ]] && cp \
	/defaults/settings.json /config/settings.json

# copy blocklist-update script
[[ ! -f /config/blocklist-update.sh ]] && cp \
	/defaults/blocklist-update.sh /config/blocklist-update.sh

# copy main notification script handler
[[ ! -f /config/torrent-notify.sh ]] && cp \
	/defaults/torrent-notify.sh /config/torrent-notify.sh

# copy mail notification script
[[ ! -f /config/mail-notification.py ]] && cp \
	/defaults/mail-notification.py /config/mail-notification.py

# permissions
chown abc:abc \
	/config/settings.json \
	/config/blocklist-update.sh \
	/config/torrent-notify.sh \
	/config/mail-notification.py \
	/downloads \
	/downloads/complete \
	/downloads/incomplete \
	/watch

chmod 755 /config/blocklist-update.sh \
          /config/torrent-notify.sh \
          /config/mail-notification.py
