#!/usr/bin/with-contenv bash

# make folders
mkdir -p \
	/downloads /watch

# copy config
[[ ! -f /config/settings.json ]] && cp \
	/defaults/settings.json /config/settings.json

# copy blocklist-update script
[[ ! -f /config/blocklist-update.sh ]] && cp \
	/defaults/blocklist-update.sh /config/blocklist-update.sh

# copy trackerlist-update script
[[ ! -f /config/tracker-add-auto.sh ]] && cp \
	/defaults/tracker-add-auto.sh /config/tracker-add-auto.sh

# permissions
if [ "$FIX" == "Yes" ];then
chown -R abc:abc \
	/config \
	/downloads \
	/watch
fi

chmod 755 /config/blocklist-update.sh
chmod 755 /config/tracker-add-auto.sh